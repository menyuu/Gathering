$('.search_result').html(`
<% if @search_result%>
  <table class="table table-borderless">
    <thead>
      <tr>
        <td>
           <%= j(@search_result.name) %>
        </td>
        <td>
          現在の状態： <%= j(@search_result.status_i18n) %>
        </td>
      </tr>
    </thead>
    <tbody>
     <tr>
        <td>
          <% if @search_result.prepared? %>
            <%= j(link_to "非表示", admin_tag_path(@search_result, status: "hide"), method: :patch, remote: true, class: "btn btn-outline-dark")  %>
          <% else %>
            <%= j(link_to "公開する", admin_tag_path(@search_result, status: "prepared"), method: :patch, remote: true, class: "btn btn-outline-dark") %>
          <% end %>
        </td>
        <td>
          <%= j(link_to "削除", admin_tag_path(@search_result), method: :delete, remote: true, class: "btn btn-outline-danger", data: { confirm: "本当に削除しますか？" }) %>
        </td>
      </tr>
    </tbody>
  </table>
<% else %>
  <h4>
    "<%= j(@search_name) %>"は見つかりませんでした。
  </h4>
<% end %>
`);